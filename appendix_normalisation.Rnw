\subsection{Matrix of Minors}
\label{sec:MA}

Here we will derive the matrix of minors for a matrix 
of the form $A(a,b,c,d)$. 
We separate this problem into cases, and find the 
minors for each case separately.

\subsubsection{Case 1: $i = j$ (diagonal entries)}
\label{sec:MAcase1}

This case reduces to the general problem of finding 
$|A(a,b,c,d)|$, which we have already solved in 
\refsec{detA} --- $|A(a,b,c,d)|$ is given in 
\refeqn{detA}. So,
{\small
\begin{equation*}
|A(a,b,c,d) \setminus (i,i)| = \left \{ \begin{array}{ll}
|A(a,b-1,c,d)| = a^{b-1}c^d - (b-1)da^{b-2}c^{d-1} & \text{if } i \in [1,b] \\
|A(a,b,c,d-1)| = a^bc^{d-1} - b(d-1)a^{b-1}c^{d-2} & \text{if } i \in [b+1,b+d] \\
\end{array} \right .
\end{equation*}
}


\subsubsection{Case 2: $i = 1$ and $j \in [b+1,b+d]$}
\label{sec:MAcase2}

From \refsubsec{MAcase1}{Case 1} we have:

{\footnotesize
\begin{align*}
	\sum_{k = 2}^{b-1}{\frac{(d-1)!(b-2)!}{(d-k)!(b-k)!}|A_k|} &= \sum_{k = 2}^{b-1}{\frac{(d-1)!(b-2)!}{(d-k)!(b-k)!}(a^{b-k}c^{d-k} - (b-k)(d-k)a^{b-k-1}c^{d-k-1})} \\
	&= (d-1)!(b-2)!\left [ \sum_{k = 2}^{b-1}{\frac{a^{b-k}c^{d-k}}{(d-k)!(b-k)!}} - \sum_{k = 2}^{b-1}{\frac{a^{b-k-1}c^{d-k-1}}{(d-k-1)!(b-k-1)!}} \right ] \\
	&= (d-1)!(b-2)!\left [ \sum_{k = 2}^{b-1}{\frac{a^{b-k}c^{d-k}}{(d-k)!(b-k)!}} - \sum_{k = 3}^{b}{\frac{a^{b-k}c^{d-k}}{(d-k)!(b-k)!}} \right ] \\
	&= (d-1)!(b-2)!\left [ \frac{a^{b-2}c^{d-2}}{(d-2)!(b-2)!} - \frac{c^{d-b}}{(d-b)!} \right ] \\
	&= (d-1)a^{b-2}c^{d-2} - \frac{(d-1)!(b-2)!}{(d-b)!}c^{d-b} \\
\end{align*}
}

and thus also

{\scriptsize
\begin{align*}
	|A(a,b,c,d-1) \setminus (1,2)| 	&= - \sum_{k = 2}^{l}{\frac{(d-1)!(b-2)!}{(d-k)!(b-k)!}|A_k|} + \frac{(d-1)!(b-2)!}{(d-l)!(b-l-1)!}|A(a,b-l+1,c,d-l) \setminus (1,2)| & \\
																	&= - \sum_{k = 2}^{b-1}{\frac{(d-1)!(b-2)!}{(d-k)!(b-k)!}|A_k|} + \frac{(d-1)!(b-2)!}{(d-b+1)!}|A(a,2,c,d-b+1) \setminus (1,2)| & \\
																	&= - \left[ (d-1)a^{b-2}c^{d-2} - \frac{(d-1)!(b-2)!}{(d-b)!}c^{d-b} \right ] - \frac{(d-1)!(b-2)!}{(d-b)!}c^{d-b} & \\
																	&= - (d-1)a^{b-2}c^{d-2} & \\
\end{align*}
}

and so by expanding along the $(j-1)$th row (i.e. the $j$th row of $A_0$), we have our result:

{\scriptsize
\begin{align*}
	|A_0 \setminus (1,j)| 	&= \sum_{k=1}^{b}{(-1)^{j+k-1}|A_0 \setminus \{ (1,j),(j,k) \}|} & \\
			&= \sum_{k=1}^{b}{(-1)^{j+k-1}|A(a,b,c,d-1) \setminus (1,k) |} & \\
			&= (-1)^{j}|A_1| + \sum_{k=2}^{b}{(-1)^{j+k-1}|A(a,b,c,d-1) \setminus (1,k) |} & \\
			&= (-1)^{j}|A_1| + (-1)^{j-1}(b-1)|A(a,b,c,d-1) \setminus (1,2)| & \text{(Sec. \ref{sec:prelimTheorem})} \\
			&= (-1)^{j}\left [ a^{b-1}c^{d-1} - (b-1)(d-1)a^{b-2}c^{d-2} \right ] + (-1)^{j-1}(b-1)\left [ - (d-1)a^{b-2}c^{d-2} \right ] & \text{(Case 1)} \\
			&= (-1)^{j}\left [ a^{b-1}c^{d-1} - (b-1)(d-1)a^{b-2}c^{d-2} + (b-1)(d-1)a^{b-2}c^{d-2} \right ] & \\
			&= (-1)^{j} a^{b-1}c^{d-1}& \\
\end{align*}
}



\subsubsection{Case 3: $i \in [2,b]$ and $j \in [b+1,b+d]$}
\label{sec:MAcase3}

We can extend the result from \refsubsec{MAcase2}{Case 2} for 
$|A(a,b,c,d-1)\setminus (1,2)|$ to 
$|A(a,b,c,d-1)\setminus (1,i)|$ by the results in 
\refsec{prelimTheorem}, or by the same recursive 
argument as in \refsubsec{MAcase1}{Case 1}, either way 
we obtain the identity
\begin{equation*}
	(-1)^i|A(a,b,c,d-1) \setminus (1,2)| = |A(a,b,c,d-1) \setminus (1,i)| = |A(a,b,c,d-1) \setminus (i,1)|.
\end{equation*}

So this case reduces to be the same as that of 
\refsubsec{MAcase2}{Case 2}.

{\scriptsize
\begin{align*}
	|A_0 \setminus (i,j)| 	&= \sum_{k=1}^{b}{(-1)^{j+k-1}|A_0 \setminus \{ (i,j),(j,k) \}|} & \\
			&= \sum_{k=1}^{b}{(-1)^{j+k-1}|A(a,b,c,d-1) \setminus (i,k) |} & \\
			&= (-1)^{j+i-1}|A_1| + \sum_{k=1, \, k \neq i}^{b}{(-1)^{j+k-1}|A(a,b,c,d-1) \setminus (i,k) |} & \\
			&= (-1)^{j+i-1}|A_1| + (-1)^{j}(b-1)|A(a,b,c,d-1) \setminus (i,1) | & \\
			&= (-1)^{j+i-1}|A_1| + (-1)^{j+i}(b-1)|A(a,b,c,d-1) \setminus (1,2) | & \text{(Identity)} \\
			&= (-1)^{j+i-1}\left [ a^{b-1}c^{d-1} - (b-1)(d-1)a^{b-2}c^{d-2} \right ] + (-1)^{j+i}(b-1)\left [ - (d-1)a^{b-2}c^{d-2} \right ] &  \\
			&= (-1)^{j+i-1}\left [ a^{b-1}c^{d-1} - (b-1)(d-1)a^{b-2}c^{d-2} + (b-1)(d-1)a^{b-2}c^{d-2} \right ] &  \\
			&= (-1)^{j+i-1} a^{b-1}c^{d-1} &  \\
\end{align*}
}

Note that for $i = 1$ this is the same as 
\refsubsec{MAcase2}{Case 2}, so this result generalises the result
of \refsubsec{MAcase2}{Case 2}.

\subsubsection{Case 4: $i < j$ and $i,j \in [1,b]$}
\label{sec:MAcase4}

From \refsubsec{MAcase1}{Case 1}, using the result from 
\refsubsec{MAcase3}{Case 3} we have that
{\footnotesize
\begin{align*}
	(-1)^b|A_0\setminus (1,b+1)| &= -|A_1| + (b-1)|A(a,b,c,d-1)\setminus (1,2)| & \\
					&= -\left [ a^{b-1}c^{d-1} - (b-1)(d-1)a^{b-2}c^{d-2} \right ] + (b-1)\left [ - (d-1)a^{b-2}c^{d-2} \right ] & \\
					&= -a^{b-1}c^{d-1}. & \\
\end{align*}
}

This gives us that
\begin{equation*}
		(-1)^{b+1}|A(a,b-1,c,d)\setminus (i,b)| = (-1)^ia^{b-2}c^{d-1}.
\end{equation*}

So, similarly to before, expanding along the $(j-1)$th 
row gives us our solution:
\begin{align*}
	|A_0 \setminus (i,j)|	&= \sum_{k=b+1}^{b+d}{(-1)^{j+k}|A_0 \setminus \{ (i,j),(j,k) \}|} & \\
					&= \sum_{k=b+1}^{b+d}{(-1)^{j+k}|A(a,b-1,c,d) \setminus (i,k-1)|} & \\
					&= (-1)^{j+b+1}d|A(a,b-1,c,d) \setminus (i,b)| & \\
					&= (-1)^{j+i}da^{b-2}c^{d-1}. & \\
\end{align*}

\subsubsection{Case 5: $i < j$ and $i,j \in [b+1,b+d]$}
\label{sec:MAcase5}

In \refsubsec{MAcase4}{Case 4} we noted that 
\begin{equation*}
	(-1)^b|A_0\setminus (1,b+1)| = -a^{b-1}c^{d-1}. \\
\end{equation*}

By the result of \refsec{prelimTheorem} we know that 
this means that
\begin{equation*}
	(-1)^b|A_0\setminus (1,i)| = (-1)^{b+i}a^{b-1}c^{d-1} \\
\end{equation*}
for $i \in [b+1,b+d]$.

So, again, we obtain our solution by expanding the 
$(j-1)$th row,
\begin{align*}
	|A_0 \setminus (i,j)|	&= \sum_{k=1}^{b}{(-1)^{j+k-1}|A_0 \setminus \{ (i,j),(j,k) \}|} & \\
						&= \sum_{k=1}^{b}{(-1)^{j+k-1}|A(a,b,c,d-1) \setminus (i,k)|} & \\
						&= (-1)^{j+i}ba^{b-1}c^{d-2}. & \\
\end{align*}



\subsubsection{Case 6: $i > j$}
\label{sec:MAcase6}

Trivially all the other cases generalise by 
symmetry ($|A| = |A^T|$).



\subsection{Inverse}
\label{sec:invA}

In \refsec{MA} we derived the matrix of minors for a 
general matrix $A(a,b,c,d)$,
{\footnotesize
\begin{equation*}
	M_{ij} = \left \{ \begin{array}{lll}
						a^{b-1}c^{d} - d(b-1)a^{b-2}c^{d-1} & i,j \in [1,b] & i = j \\
						a^{b}c^{d-1} - b(d-1)a^{b-1}c^{d-2} & i,j \in [b+1,b+d] & i = j  \\
						(-1)^{j+i}da^{b-2}c^{d-1}				& i,j \in [1,b] & i \neq j \\
						(-1)^{j+i}ba^{b-1}c^{d-2}				& i,j \in [b+1,b+d] & i \neq j \\
						(-1)^{j+i-1} a^{b-1}c^{d-1}			& i \in [1,b], \, j \in [b+1,b+d] & \text{or } j \in [1,b], \, i \in [b+1,b+d]
	\end{array} \right .
\end{equation*}
}

The cofactors ($C_{ij} = (-1)^{i+j} M_{ij}$) are thus
{\footnotesize
\begin{equation*}
	C_{ij} = \left \{ \begin{array}{lll}
						a^{b-1}c^{d} - d(b-1)a^{b-2}c^{d-1} & i,j \in [1,b] & i = j \\
						a^{b}c^{d-1} - b(d-1)a^{b-1}c^{d-2} & i,j \in [b+1,b+d] & i = j  \\
						da^{b-2}c^{d-1}				& i,j \in [1,b] & i \neq j \\
						ba^{b-1}c^{d-2}				& i,j \in [b+1,b+d] & i \neq j \\
						-a^{b-1}c^{d-1}			& i \in [1,b], \, j \in [b+1,b+d] & \text{or } j \in [1,b], \, i \in [b+1,b+d]
	\end{array} \right.,
\end{equation*}
}
and as $|A(a,b,c,d)| = a^{b}c^{d} - bda^{b-1}c^{d-1} = a^{b-1}c^{d-1}(ac - bd)$ 
(\refeqn{detA}), we can conclude that the inverse is
\begin{equation*}
	\left [A_0^{-1} \right ]_{ij} = 
  \left [A(a,b,c,d)^{-1} \right ]_{ij} = 
  \left \{ \begin{array}{cll}
						\frac{ac - bd + d}{a(ac-bd)} 	& i,j \in [1,b] & i = j \\ \\
						\frac{ac - bd + b}{c(ac-bd)} 	& i,j \in [b+1,b+d] & i = j  \\ \\
						\frac{d}{a(ac-bd)}						& i,j \in [1,b] & i \neq j \\ \\
						\frac{b}{c(ac-bd)}				& i,j \in [b+1,b+d] & i \neq j \\ \\
						\frac{-1}{ac-bd}			& \begin{array}{l}
																						i \in [1,b], \, j \in [b+1,b+d] \\
																						j \in [1,b], \, i \in [b+1,b+d]
																				\end{array}  & \text{or}
	\end{array} \right .
\end{equation*}


% \section{Inverse of $C(n,d,c)$}
% \label{sec:invCproof}
